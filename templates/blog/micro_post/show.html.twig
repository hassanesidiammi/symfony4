{% block title %}MicroPost{% endblock %}

{% block body %}
    <h1>MicroPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ micro_post.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ micro_post.text }}</td>
            </tr>

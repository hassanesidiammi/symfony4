{% extends 'base.html.twig' %}

{% block title %}Blog!{% endblock %}

{% block body %}
    <p>{{ my_global_variable }}</p>
    <p>{{ my_global_parameter|raw }}</p>
    {% if posts|length %}
        <table>
            <tr><th>ID</th><th>Title</th><th>Price</th></tr>
        {% for id, post in posts %}
            <tr>
                <th><a href="{{ path('post_show', {id: id}) }}">{{ id }}</a></th>
                <td><a href="{{ path('post_show', {id: id}) }}">{{ post.title }}</a></td>
                <td>{{ post.price | price }}</td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <b>No post yet!</b>
    {% endif %}
    <p>
        <a href="{{ path('post_add') }}">Add random Post</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('post_reset') }}">Reset</a>
    </p>
{% endblock %}
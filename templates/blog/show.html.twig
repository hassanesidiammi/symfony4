{% extends 'base.html.twig' %}

{% block title %}Blog!{% endblock %}

{% block body %}
    <table class="table table-dark">
        <tr><th>ID</th><td>{{ id }}</td></tr>
        <tr><th>Title</th><td>{{ post.title }}</td></tr>
        <tr><th>Body</th><td>{{ post.body }}</td></tr>
        <tr><th>Created at</th><td>{{ post.createdAt|date }}</td></tr>
        <tr><th>Price</th><td>{{ post.price | price }}</td></tr>
    </table>
    <p>
        <a href="{{ path('post_index') }}" class="btn btn-outline-info"> << List</a>
    </p>
{% endblock %}